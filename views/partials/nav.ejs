  <% if (!user) { %>
    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav>
    <div id="icon-name-container">
          <i class="fas fa-2x fa-solid fa-music"></i>
    <a href="/" id="page-title">Rate-a-Song</a>
    </div>

    <div id="navigation-container">
      <a href="/songs" class="navigation">All Songs</a>
      <% if (user) { %>
        <a href="/songs/new" class="navigation">Add Song</a>
      <% } %>
    </div>

    <div id="oauth-container">
          <% if (user) { %>
      <a href="/auth/logout" class="right">
        <button type="submit">Logout</button>
      </a>
    <% } else { %>
      <div 
        id="g_id_onload"
        data-client_id="<%= googleClientID %>"
        data-login_uri="/auth/google"
        data-auto_prompt="false"
        data-prompt_parent_id="g_id_onload"
      ></div>
      <div 
        class="g_id_signin right"
        data-type="standard"
        data-size="large"
        data-theme="outline"
        data-text="sign_in_with"
        data-shape="rectangular"
        data-logo_alignment="left"
      ></div>
    </div>


    <% } %>
  </nav>
