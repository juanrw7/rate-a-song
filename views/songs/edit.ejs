<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/songs/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
  action="/songs/<%= song._id %>?_method=PUT " 
  method="POST"
  >
  <div class="inputs-container">
    <label for="name-input">Song</label>
    <input type="text" name="name" id="name-input" placeholder="Name of the song" required value="<%= song.name %>" autocomplete="off">
  </div>

  <div class="inputs-container">
    <label for="artist-input">Artist</label>
    <input type="text" name="artist" id="artist-input" placeholder="Name of the artist" required value="<%= song.artist %>" autocomplete="off">
  </div>

  <div class="inputs-container">
    <label for="year-input">Release Year</label>
    <input type="number" name="releaseYear" id="year-input" min=1700 required value="<%= song.releaseYear %>" autocomplete="off">
  </div>

  <div class="inputs-container">
    <label for="theirRating-input">Your Rating</label>
    <input type="number" name="theirRating" id="theirRating-input" min=1 max=10 required value="<%= song.theirRating %>" autocomplete="off">
  </div>

  <div class="inputs-container">
    <button type="submit" id="update-button">Update Song</button>
  </div>

  </form>
</main>

<%- include('../partials/footer') %>