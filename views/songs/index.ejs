<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/songs/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>

  <table id="songs-list">

    <thead>
      <tr>
        <th>Song</th>
        <th>Rating</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% songs.forEach(song => { %>
        <% let initialRating = 0 %>
        <% song.reviews.forEach(review => { %>
          <% initialRating += review.rating %>
        <% }) %>
        <% let averageRating = initialRating / song.reviews.length %>
        <tr>
          <td><%= song.name %></td>
          <td> <% if (averageRating) { %>
            <%= averageRating %>
          <% } else {%> 
            --
          <% } %>
          </td>
          <td>
            <form action="/songs/<%= song._id %>"><button id="details-button" type="submit">ğŸ‘ï¸</button></form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

