<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>

  <table id="songs-list">

    <thead>
      <tr>
        <th>Song</th>
        <th>Rating</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% songs.forEach(song => { %>
        <tr>
          <td><%= song.name %></td>
          <td> --  <%#= song.review.rating %>  </td>
          <td>
            <form action="/songs/<%= song._d %>"><button id="details-button" type="submit">👁️</button></form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>