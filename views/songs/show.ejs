<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/songs/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  
  <table id="song-details">
    <tbody>
      <tr>
        <td class="details-title">Name:</td>
        <td><%= song.name %></td>
      </tr>
      <tr>
        <td class="details-title">Artist:</td>
        <td><%= song.artist %></td>
      </tr>
      <tr>
        <td class="details-title">Released:</td>
        <td><%= song.releaseYear %></td>
      </tr>
      <tr>
        <td class="details-title">-</td>
      </tr>
      <tr>
        <td class="details-title">Added By:</td>
        <td><%= song.addedBy.name %></td>
      </tr>
      <tr>        
        <td class="details-title">Their Rating:</td>
        <td><%= song.theirRating %></td>
      </tr>
    </tbody>
  </table>

  <% if (song.addedBy._id.equals(user.profile._id)) { %>
    <div id="author-button-container">
      <form action="/songs/<%= song._id %>/?_method=DELETE" method="POST">
        <button type="submit" id="delete-button">Delete Song üöÆ</button>
      </form>

      <form action="/songs/<%= song._id %>/edit" method="GET">
        <button type="submit" id="edit-button">Edit Song üñãÔ∏è</button>
      </form>
    </div>
  <% } %>

  <h1 id="reviews-h1">Reviews</h1>

  <div id="review-form-container">
    <form 
    action="/songs/<%= song._id %>/reviews" 
    method="POST"
    >
      <label for="comment-input"></label>
      <input type="text" name="comment" id="comment-input" placeholder="Add a comment" required>
      <label for="rating-input">Rating: </label>
      <input type="number" name="rating" id="rating-input" placeholder="1-10" min="1" max="10" required>

      <button type="submit">Add</button>
    </form>
  </div>

  <% if (song.reviews.length) { %>

    <table id="reviews-table">
      <thead>
        <tr>
          <th></th>
          <th>Date</th>
          <th>By</th>
          <th id="comment-title">Comment</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% song.reviews.forEach(review => { %>
          <tr>
            <% if (review.author._id.equals(user.profile._id)) { %>
              <td>
                <form 
                action="/songs/<%= song._id %>/reviews/<%= review._id %>?_method=DELETE" 
                method="POST"
                >
                  <button type="submit" id="delete-review-button">üóëÔ∏è</button>
                </form>
              </td>
            <% } else {%>
              <td> </td>
            <% } %>
            <td><%= review.createdAt.toLocaleString('en-US', {month: 'numeric', day: 'numeric', year: '2-digit'}) %></td>
            <td><%= review.author.name %></td>
            <td id="review-comment"><%= review.comment %></td>
            <td><%= review.rating %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  <% } else {%>
    <h3>No reviews yet...</h3>
  <% } %>

</main>

<%- include('../partials/footer') %>